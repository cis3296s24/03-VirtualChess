<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import com.almasb.fxgl.app.scene.FXGLDefaultMenu.MenuButton?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cis3296.virtualchess.Controller">
    <GridPane fx:id="chessBoard"
              maxHeight="-Infinity"
              maxWidth="-Infinity"
              minHeight="800"
              minWidth="900"
              prefHeight="800.0"
              prefWidth="900.0">
    </GridPane>
    <HBox>
        <Button
                text="Sandcastle"
                onAction="#changeStyleToSandcastle"/>
        <Button
                text="Coral"
                onAction="#changeStyleToCoral"/>
        <Button
                text="Dusk"
                onAction="#changeStyleToDusk"/>
        <Button
                text="Wheat"
                onAction="#changeStyleToWheat"/>
        <Button
                text="Marine"
                onAction="#changeStyleToMarine"/>
        <Button
                text="Emerald"
                onAction="#changeStyleToEmerald"/>
    </HBox>


</VBox>
